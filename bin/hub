#!/bin/bash
function pull {
    echo "hub -p(ull) will be deprecated in favor of repos"
    for i in `\ls -d */` ;
    do 
      cd ${i}
      git stash
      git checkout master;
      git pull;
      git checkout -
      git stash pop
      cd - > /dev/null
    done
}

function branches {
    for i in `ls -d */` ;
    do 
      cd ${i} ; 
      branches=$(git branch | wc -l)
      if [ ${branches} -gt 1 ] 
      then
        echo ${i}; 
        git branch -v
      fi
      cd - > /dev/null; 
    done
}

function status {
    for i in `ls -d */`;
    do
        cd ${i}
        modified=$(git status -s | wc -l)
        if [ ${modified} -gt 0 ]
        then
            echo ${i}
            git status -s
        fi
        cd - > /dev/null;
   done     
}

function list_stash {
    for i in `ls -d */`;
    do
        cd ${i}
        modified=$(git --no-pager stash list | wc -l)
        if [ ${modified} -gt 0 ]
        then
            echo ${i}
            git --no-pager stash list
        fi
        cd - > /dev/null;
   done
}

while getopts ":pbsl" opt;
do
    case ${opt} in
        p)
            pull
        ;;
        b)
            branches
        ;;
        s)
            status
        ;;    
        l)
            list_stash
        ;;
        \?)
        echo "Invalid option"
        ;;
    esac    
done
